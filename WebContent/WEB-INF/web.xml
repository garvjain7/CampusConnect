<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>LibraryManagementSystem</display-name>

    <!-- ===========================
          SERVLET DECLARATIONS
    ============================ -->
    
    <!-- Add Book -->
    <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>com.library.servlets.AddBookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/addBook</url-pattern>
    </servlet-mapping>

    <!-- View Books -->
    <servlet>
        <servlet-name>ViewBooksServlet</servlet-name>
        <servlet-class>com.library.servlets.ViewBooksServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewBooksServlet</servlet-name>
        <url-pattern>/viewBooks</url-pattern>
    </servlet-mapping>

    <!-- Delete Book -->
    <servlet>
        <servlet-name>DeleteBookServlet</servlet-name>
        <servlet-class>com.library.servlets.DeleteBookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteBookServlet</servlet-name>
        <url-pattern>/deleteBook</url-pattern>
    </servlet-mapping>

    <!-- Register Member -->
    <servlet>
        <servlet-name>RegisterMemberServlet</servlet-name>
        <servlet-class>com.library.servlets.RegisterMemberServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterMemberServlet</servlet-name>
        <url-pattern>/registerMember</url-pattern>
    </servlet-mapping>

    <!-- Issue Book -->
    <servlet>
        <servlet-name>IssueBookServlet</servlet-name>
        <servlet-class>com.library.servlets.IssueBookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>IssueBookServlet</servlet-name>
        <url-pattern>/issueBook</url-pattern>
    </servlet-mapping>

    <!-- Return Book -->
    <servlet>
        <servlet-name>ReturnBookServlet</servlet-name>
        <servlet-class>com.library.servlets.ReturnBookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReturnBookServlet</servlet-name>
        <url-pattern>/returnBook</url-pattern>
    </servlet-mapping>


    <!-- ===========================
          WELCOME PAGE
    ============================ -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
